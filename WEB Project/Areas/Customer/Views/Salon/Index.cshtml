@model WEB_Project.Models.Salon

@{
    ViewData["Title"] = "Salon Bilgileri";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null)
{
    <div class="card">
        <div class="card-header">
            <h3>Salon Bilgileri</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Salon Adı:</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Adres:</dt>
                <dd class="col-sm-10">@Model.Address</dd>

                <dt class="col-sm-2">Telefon Numarası:</dt>
                <dd class="col-sm-10">@Model.PhoneNumber</dd>
                <dt class="col-sm-2">Çalışma Saatleri:</dt>
                <dd class="col-sm-10">@Model.WorkingHours</dd>
            </dl>

   
        </div>
    </div>
}

 