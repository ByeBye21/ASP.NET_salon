@model WEB_Project.Models.Appointment

<h2>Yeni Randevu</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerName">Müşteri Adı</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AppointmentDate">Randevu Tarihi</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Employees">Çalışan Seç</label>
        <select asp-for="Employees" class="form-control" asp-items="@(new SelectList(Model.Employees, "EmployeeId", "Name"))"></select>
    </div>

    <div class="form-group">
        <label for="Expertises">Uzmanlık Alanı</label>
        <select asp-for="Expertises" class="form-control" asp-items="@(new SelectList(Model.Expertises, "ExpertiseId", "Area"))"></select>
    </div>

    <div class="form-group form-check">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label">Onaylandı</label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
