@model List<WEB_Project.Models.Appointment>

<h2>Randevular</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Müşteri Adı</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentId</td>
                <td>@appointment.CustomerName</td>
                <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@(appointment.Status ? "Onaylandı" : "Bekliyor")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">Detay</a>
                    <form asp-action="Delete" asp-route-id="@appointment.AppointmentId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Yeni Randevu</a>
