<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient text-secondary py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Suggest a Hairstyle</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="UploadPhoto" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="photo" class="form-label">Select a photo to upload:</label>
                <input type="file" name="file" id="photo" class="form-control mb-3" required />
            </div>
            <button id="upload-submit" type="submit" class="w-25 btn btn-md btn-primary mb-3">Upload Photo</button>
        </form>

        @if (ViewBag.ImageUrl != null)
        {
            <div class="mt-3">
                <h4>Generated Image:</h4>
                <!-- Resim ve yazı container'ı buraya ekliyoruz -->
                <div class="image-container mb-3 text-center">
                    <img src="@ViewBag.ImageUrl" alt="Generated Image" class="img-fluid mb-3" />
                    <p class="image-caption">İşte sizin yüzünüze uygun bir saç modeli</p>
                </div>
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">
                <strong>Error:</strong> @ViewBag.Error
            </div>
        }
    </div>
</div>
