@model WEB_Project.Models.Employee

<h2>Çalışanı Sil</h2>
<h3>Çalışan silmek istediğinizden emin misiniz?</h3>

<div>
    <p><strong>Ad:</strong> @Model.Name</p>
    <p><strong>Uzmanlık:</strong> @Model.Expertise</p>
    <p><strong>Uygunluk Saatleri:</strong> @Model.AvailabilityHours</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index", "Employee", new { area = "Admin" })" class="btn btn-secondary">İptal</a>
</form>
