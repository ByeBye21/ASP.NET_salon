@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square-dotted"></i> Create New Category
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Number
			</th>
			<th>
				Category Name
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.OrderBy(u=>u.Num))
		{
			<tr>
				<td>
					@obj.Num
				</td>
				<td>
					@obj.Name
				</td>
			</tr>
		}
	</tbody>
</table>

</div>
